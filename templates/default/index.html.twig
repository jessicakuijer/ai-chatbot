{% extends 'base.html.twig' %}

{% block body %}
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <div class="container-fluid mt-4">
        <div class="container my-auto">
            <div class="row align-items-center justify-content-center">
                <div class="col-12 col-md-8 col-lg-6 text-center">
                    <h1 class="text-center bg-info border border-primary py-3">
                       {#  Welcome to AI-Chatbot Symfony project ! #}{{ 'intro.welcome'|trans }}<br />
                        {# Click on button to enter ! #}{{ 'intro.buttons'|trans }}
                    </h1>
                    <button class="btn btn-primary btn-lg btn-block">
                        <a href="/login" class="text-white">
                            {# Enter #}
                            {{ 'button.login'|trans }}
                        </a>
                    </button>
                    </button>
                    <button class="btn btn-success btn-lg btn-block">
                        <a href="https://www.linkedin.com/in/jessicakuijer" class="text-white" target="_blank">
                        {# Demande d'acc√®s #}
                        {{ 'button.request_access'|trans }}
                        </a>
                    </button>
                </div>
                <div class="col-12 col-md-8 col-lg-6 text-center mt-4">
                    <img src="{{ asset('images/gif-ai-chatbot.gif') }}" alt="AI-Chatbot" class="img-fluid">
                </div>
        </div>
    </div>

    <style>
        /* Styles for iPhone 12 */
        @media only screen and (max-width: 390px) {
            .background-cover {
                background-size: cover;
            }
            h1 {
                font-size: 1.5rem;
                margin-bottom: 1rem;
            }
            button {
                font-size: 1rem;
                padding: 0.5rem 1rem;
            }
        }
    </style>
{% endblock %}
